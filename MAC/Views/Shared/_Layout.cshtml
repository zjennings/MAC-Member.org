                <h2 class="footer-header">explore mac</h2>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Our Services</a></li>
                    <li><a href="#">Our Clients</a></li>
                    <li><a href="#">Our Pricing</a></li>
                    <li><a href="#">MAC Tour</a></li>
                    <li><a href="#"></a>Contact Us</a></li>
                </ul>
            </div>  
        </div>     
        <div class="row row-subFooter">
            © 2016 Merchant Acquirers' Committee. All Rights Reserved.
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/morphist")
    <script>
        var removePadding = function () {
            if ($(window).width() < 768) {
                $("body").css("padding", 0);
            }
            else {
                $("body").css("padding", "40px 0 80px 0");
            }
        };

        removePadding();

        $(window).resize(removePadding);
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
