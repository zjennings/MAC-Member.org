<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>MAC - @ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,400i,700|Roboto+Slab:300' rel='stylesheet' type='text/css'>
    <link href="../Content/morphist.css" rel="stylesheet" type="text/css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="nav-wrapper">
        <nav class="navbar navbar-default" data-spy="affix" data-offset-top="40" data-offset-bottom="200">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img src="~/Content/img/maclogo_cropped.png" />
                        <span class="sr-only">Home</span>
                    </a>
                </div>

                <div class="collapse navbar-collapse clearfix" id="navbar-1">
                    <ul class="nav navbar-nav">
                        <li><a href="#">EVENTS</a></li>
                        <li><a href="#">CONTACT US</a></li>
                        <li><a href="#">JOIN</a></li>
                    </ul>
                    <form class="navbar-form navbar-right">
                        <div class="form-group">
                            <input type="text" placeholder="Username" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" placeholder="Password" class="form-control">
                        </div>
                        <button type="submit" class="btn">Login</button>
                    </form>
                </div>
            </div>
        </nav>
    </div>
    
    <div class="container">  
        @RenderBody()

        <div class="row row-footer">
            <div class="col-md-12" style="text-align:center;">
                © 2013 Merchant Acquirers' Committee. All Rights Reserved.
            </div>
        </div>            

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/morphist")
    @RenderSection("Scripts", required: false)
</body>
</html>
